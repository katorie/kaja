.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active=link_to pat(:list), url(:communities, :index)
      %li=link_to pat(:new), url(:communities, :new)
  .content
    %h2.title
      =pat(:all)
      =mt(:community)
    .inner
      %table.table
        %tr
          %th=mat(:community, :name)
          %th=mat(:community, :description)
          %th=mat(:community, :email)
          %th=mat(:community, :created_at)
          %th.last="&nbsp;"
        -@communities.each do |community|
          %tr
            %td=h community.name
            %td=h community.description
            %td=h community.email
            %td=l community.created_at
            %td.last
              =button_to pat(:show), url(:communities, :show, id: community.id), method: :get, class: :button_to
      .actions-bar.wat-cf
        .actions="&nbsp;"

-content_for :sidebar, partial("base/sidebar")
